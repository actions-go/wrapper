{
  "name": "golang-action",
  "version": "0.0.0",
  "private": true,
  "description": "golang template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "golang",
    "go",
    "setup"
  ],
  "author": "Thibault Jamet",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/parser": "^5.29.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^8.8.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^27.1.2",
    "jest": "^26.6.3",
    "jest-circus": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.5.5"
  }
}
